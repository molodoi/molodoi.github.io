---
import Link from "./Link.astro";
import SvgAddCircle from "./svg/SvgAddCircle.astro";
import { Image } from "astro:assets";
import Nacel from "../assets/homepage-nacel-sejours-linguistiques.jpg";
import Clc from "../assets/homepage-clc-club-langue-et-civilisation.jpg";
---

<section class="bg-blue-50 dark:bg-slate-950 text-gray-600 body-font">
    <div class="container px-5 py-12 mx-auto">
        <div class="flex flex-col w-full mb-10">
            <div class="mb-6">
                <h2
                    class="sm:text-3xl text-2xl font-medium title-font mb-2 text-blue-500 uppercase"
                >
                    Projets
                </h2>
                <div class="h-1 w-20 bg-blue-500 rounded"></div>
            </div>
            <p
                class="text-justify text-lg font-light leading-loose text-blue-950 dark:text-gray-300"
            >
                Mon parcours est marqué par la création de sites web. Ils m'ont
                fait confiance.
            </p>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <Link
                href="/projects/nacel-sejours-linguistiques-internationaux/"
                class="group h-[450px]"
            >
                <div
                    class="p-8 bg-cyan-600 rounded-lg mb-4 group-hover:hover:shadow-lg transition-transform group-hover:-translate-y-2 will-change-transform ease-in-out duration-200"
                >
                    <Image
                        src={Nacel}
                        alt="Nacel sejours linguistiques"
                        class="rounded-lg h-[250px] w-full object-cover"
                    />
                </div>
                <h2
                    class="text-xl uppercase text-blue-950 hover:text-blue-600 group-hover:text-blue-600 dark:text-gray-300 dark:hover:text-blue-600 transition-colors ease-in-out"
                >
                    Nacel
                </h2>
                <p
                    class="text-lg font-light leading-loose text-blue-950 dark:text-gray-300"
                >
                    Séjours linguistiques internationaux.
                </p>
            </Link>

            <Link
                href="/projects/club-langues-et-civilisations-sejours-linguistiques/"
                class="group h-[450px]"
            >
                <div
                    class="p-8 bg-yellow-500 rounded-lg mb-4 group-hover:hover:shadow-lg transition-transform group-hover:-translate-y-2 will-change-transform ease-in-out duration-200"
                >
                    <Image
                        src={Clc}
                        alt="Nacel sejours linguistiques"
                        class="rounded-lg h-[250px] w-full object-cover"
                    />
                </div>
                <h2
                    class="text-xl uppercase text-blue-950 hover:text-blue-600 group-hover:text-blue-600 dark:text-gray-300 dark:hover:text-blue-600 transition-colors ease-in-out"
                >
                    CLC - Club Langue et civilisations
                </h2>
                <p
                    class="text-lg font-light leading-loose text-blue-950 dark:text-gray-300"
                >
                    Séjours linguistiques européens.
                </p>
            </Link>
        </div>
        <div class="w-full flex flex-col items-center my-4">
            <Link
                href="/projects"
                class="inline-flex items-center text-blue-500 border border-blue-500 py-2 px-6 rounded-xl text-lg focus:outline-none hover:text-blue-600 hover:border-blue-600 hover:shadow-lg ease-in duration-100 dark:text-blue-500"
            >
                Plus de projets
                <SvgAddCircle />
            </Link>
        </div>
        <div class="flex flex-row md:hidden">
            <span class="h-[1px] w-20 bg-gray-300 rounded mt-8 mx-auto"></span>
        </div>
    </div>
</section>
