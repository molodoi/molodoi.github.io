---
import SvgLocationPin from "./svg/SvgLocationPin.astro";
import { Image } from "astro:assets";
import Ticme from "../assets/flower-ticme.webp";
import GoAndLive from "../assets/go-and-live-rodez.webp";
import Ibm from "../assets/ibm-logo.webp";
import Lille from "../assets/ulille.webp";
import Ovh from "../assets/ovh.webp";
import Paf from "../assets/adictiz.webp";
import Enaco from "../assets/enaco.webp";
import Epsm from "../assets/logo-epsm-2.webp";
---

<section class="text-gray-600 body-font">
    <div class="container py-10 mx-auto">
        <div class="flex flex-col w-full mb-10">
            <div class="mb-6">
                <h2
                    class="sm:text-3xl text-2xl text-left font-medium title-font mb-2 text-blue-500 uppercase"
                >
                    Expériences
                </h2>
                <div class="h-1 w-20 bg-blue-500 rounded"></div>
            </div>
            <p
                class="text-justify text-lg font-light leading-loose text-blue-950 dark:text-gray-300"
            >
                Mes expériences les plus significatives en entreprise.
            </p>
        </div>
        <div class="flex flex-col md:flex-row mb-6">
            <div class="w-full md:w-1/3 flex items-center justify-center">
                <Image
                    class="rounded-full w-48 h-48 object-contain object-center sm:mb-0 bg-white p-6"
                    src={Ticme}
                    alt="Logo Ticme.fr - Développeur web full stack - PHP (Symfony/Laravel), Javascript (Vanilla, React, VueJs, Angular, Node), Mobile (React Native), CMS (Wordpress, WooCommerce, Drupal)"
                    width={128}
                    height={128}
                />
            </div>
            <div
                class="w-full md:w-2/3 text-left text-blue-950 dark:text-gray-300"
            >
                <div class="flex flex-col w-full mt-2">
                    <h2 class="text-left text-xl uppercase">Ticme</h2>
                    <div class="inline-flex items-center text-sm">
                        <SvgLocationPin />Treignac
                    </div>
                </div>
                <h3 class="text-sm">Développeur web</h3>
                <h4 class="text-sm mb-2">Juin 2021 - aujourd’hui</h4>
                <div class="flex w-full0"></div>
                <p class="text-base">
                    Laravel/Symfony, HTML5/CSS/SASS, Flexbox/Grid, JavaScript,
                    React/Next, React Native, Vuejs/Nuxt, Wordpress et autres
                    conception graphique
                </p>
            </div>
        </div>
        <div class="flex flex-col md:flex-row mb-6">
            <div class="w-full md:w-1/3 flex items-center justify-center">
                <Image
                    class="rounded-full w-48 h-48 object-contain object-center sm:mb-0 bg-white p-6"
                    src={GoAndLive}
                    alt="Logo Go&Live : spécialiste des voyages scolaires et des séjours linguistiques"
                    width={128}
                    height={128}
                />
            </div>
            <div
                class="w-full md:w-2/3 text-left text-blue-950 dark:text-gray-300"
            >
                <div class="flex flex-col w-full mt-2">
                    <h2 class="text-left text-xl uppercase">GO&LIVE</h2>
                    <div class="inline-flex items-center text-sm">
                        <SvgLocationPin />Montpellier/Rodez
                    </div>
                </div>
                <h3 class="text-sm">Développeur web</h3>
                <h4 class="text-sm mb-2">Novembre 2017 à Mars 2021*</h4>
                <p class="mt-2">
                    Refondre, développer et maintenir les sites du groupe
                    Go&Live sous Laravel :
                    <a
                        href="https://www.nacel.fr/"
                        target="_blank"
                        class="text-blue-500">Nacel</a
                    >, <a
                        href="https://www.clc.fr/"
                        target="_blank"
                        class="text-blue-500">CLC</a
                    >, <a
                        href="https://www.sportselitejeunes.fr/"
                        target="_blank"
                        class="text-blue-500">SEJ</a
                    >, <a
                        href="https://www.americanvillage.fr/"
                        target="_blank"
                        class="text-blue-500">American Village</a
                    >, <a
                        href="https://www.sans-frontieres.fr/"
                        target="_blank"
                        class="text-blue-500">Sans frontières</a
                    >.
                </p>
                <p class="font-light text-sm italic">
                    * Licenciement économique suite à l'impact de la crise
                    sanitaire sur le secteur du tourisme..
                </p>
            </div>
        </div>
        <div class="flex flex-col md:flex-row mb-6">
            <div class="w-full md:w-1/3 flex items-center justify-center">
                <Image
                    class="rounded-full w-48 h-48 object-contain object-center sm:mb-0 bg-white p-6"
                    src={Ibm}
                    alt="Logo IBM Client Innovation Center"
                    width={128}
                    height={128}
                />
            </div>
            <div
                class="w-full md:w-2/3 text-left text-blue-950 dark:text-gray-300"
            >
                <div class="flex flex-col w-full mt-2">
                    <h2 class="text-left text-xl uppercase">IBM</h2>
                    <div class="inline-flex items-center text-sm">
                        <SvgLocationPin />Lille Euratechnologie/Paris
                    </div>
                </div>
                <h3 class="text-sm">Développeur web</h3>
                <h4 class="text-sm mb-2">Novembre 2016 - Août 2017</h4>
                <p class="mt-2">
                    Nutrixo "Grands Moulins de Paris" : Magento 2/Symfony -
                    Paris
                </p>
                <p class="mt-2">
                    IBM Watson : Nodejs, Angular 2, Data Modeling - Lille
                    Euratechnologie
                </p>
            </div>
        </div>
        <div class="flex flex-col md:flex-row mb-6">
            <div class="w-full md:w-1/3 flex items-center justify-center">
                <Image
                    class="rounded-full w-48 h-48 object-contain object-center sm:mb-0 bg-white p-6 grayscale"
                    src={Ticme}
                    alt="Logo Ticme.fr - Développeur web full stack - PHP (Symfony/Laravel), Javascript (Vanilla, React, VueJs, Angular, Node), Mobile (React Native), CMS (Wordpress, WooCommerce, Drupal)"
                    width={128}
                    height={128}
                />
            </div>
            <div
                class="w-full md:w-2/3 text-left text-blue-950 dark:text-gray-300"
            >
                <div class="flex flex-col w-full mt-2">
                    <h2 class="text-left text-xl uppercase">Ticme</h2>
                    <div class="inline-flex items-center text-sm">
                        <SvgLocationPin />Bailleul/Lille
                    </div>
                </div>
                <h3 class="text-sm">Développeur web</h3>
                <h4 class="text-sm mb-2">2011 - 2016</h4>
                <div class="flex w-full0"></div>
                <p class="text-base">
                    Développement d’applications et sites web PHP, Symfony,
                    Wordpress, HTML, CSS, JS/Jquery, contenu, conception
                    graphique et vidéo.
                </p>
            </div>
        </div>
        <div class="flex flex-col md:flex-row mb-6">
            <div class="w-full md:w-1/3 flex items-center justify-center">
                <Image
                    class="rounded-full w-48 h-48 object-contain object-center sm:mb-0 bg-white p-6"
                    src={Lille}
                    alt="Logo Université Sciences et Technologies de Lille"
                    width={128}
                    height={128}
                />
            </div>
            <div
                class="w-full md:w-2/3 text-left mt-2 text-blue-950 dark:text-gray-300"
            >
                <div class="flex flex-col w-full">
                    <h2 class="text-left text-xl uppercase">USTL Lille 1</h2>
                    <div class="inline-flex items-center text-sm">
                        <SvgLocationPin />Villeneuve d’Ascq
                    </div>
                </div>
                <h3 class="text-sm">Formateur web</h3>
                <h4 class="text-sm mb-2">Octobre 2010 - Mars 2011</h4>
                <p class="mt-2">
                    Former à la programmation web avec PHP/MySQL 16 étudiants de
                    deuxième année de DEUST - BAC+2
                </p>
                <p class="mt-2">
                    <a
                        href="https://sciences-technologies.univ-lille.fr/"
                        target="_blank"
                        class="text-blue-500">USTL</a
                    >
                </p>
            </div>
        </div>
        <div class="flex flex-col md:flex-row mb-6">
            <div class="w-full md:w-1/3 flex items-center justify-center">
                <Image
                    class="rounded-full w-48 h-48 object-contain object-center sm:mb-0 bg-white p-6"
                    src={Ovh}
                    alt="OVH - Hébergeur et fournisseur de services Cloud"
                    width={128}
                    height={128}
                />
            </div>
            <div
                class="w-full md:w-2/3 text-left mt-2 text-blue-950 dark:text-gray-300"
            >
                <div class="flex flex-col w-full">
                    <h2 class="text-left text-xl uppercase">OVH</h2>
                    <div class="inline-flex items-center text-sm">
                        <SvgLocationPin />Roubaix
                    </div>
                </div>
                <h3 class="text-sm">Développeur web</h3>
                <h4 class="text-sm mb-2">Octobre 2009 - Mars 2010</h4>
                <p class="mt-2">
                    UX/UI Designer, Webmaster (cloud manager, ovh.com, ovh.biz,
                    soyoustart.com)
                </p>
                <p class="mt-2">Intégrateur (HTML, CSS, JS/Jquery, XML/XSLT)</p>
                <p class="mt-2">
                    <a
                        href="https://www.ovhcloud.com/"
                        target="_blank"
                        class="text-blue-500">OVH</a
                    >
                </p>
            </div>
        </div>
        <div class="flex flex-col md:flex-row mb-6">
            <div class="w-full md:w-1/3 flex items-center justify-center">
                <Image
                    class="rounded-full w-48 h-48 object-contain object-center sm:mb-0 bg-white p-6"
                    src={Paf}
                    alt="Adictiz plateforme de gamification"
                    width={128}
                    height={128}
                />
            </div>
            <div
                class="w-full md:w-2/3 text-left mt-2 text-blue-950 dark:text-gray-300"
            >
                <div class="flex flex-col w-full">
                    <h2 class="text-left text-xl uppercase">Adictiz</h2>
                    <div class="inline-flex items-center text-sm">
                        <SvgLocationPin />Lille Euratechnologie
                    </div>
                </div>
                <h3 class="text-sm">Développeur web</h3>
                <h4 class="text-sm mb-2">Février - Mai 2009</h4>
                <p class="mt-2">
                    Développement backend PHP du jeu PAF LE CHIEN, outils
                    d’analyses et statistiques, API Facebook,
                    internationalisation, programme affiliation OPODO partner.
                </p>
                <p class="mt-2">
                    <a
                        href="https://www.adictiz.com/"
                        target="_blank"
                        class="text-blue-500">ADICTIZ</a
                    >
                </p>
            </div>
        </div>
        <div class="flex flex-col md:flex-row mb-6">
            <div class="w-full md:w-1/3 flex items-center justify-center">
                <Image
                    class="rounded-full w-48 h-48 object-contain object-center sm:mb-0 bg-white p-6"
                    src={Enaco}
                    alt="Enaco.fr - École de commerce en ligne"
                    width={128}
                    height={128}
                />
            </div>
            <div
                class="w-full md:w-2/3 text-left mt-2 text-blue-950 dark:text-gray-300"
            >
                <div class="flex flex-col w-full">
                    <h2 class="text-left text-xl uppercase">Enaco</h2>
                    <div class="inline-flex items-center text-sm">
                        <SvgLocationPin />Lille Euratechnologie
                    </div>
                </div>
                <h3 class="text-sm">Stage Développeur web</h3>
                <h4 class="text-sm mb-2">
                    Mars - Juillet 2008 | Licence Pro T2I (Bac+3)
                </h4>
                <p class="mt-2">
                    Développement sur l’outil interne de gestion de relation
                    client (PHP5/MySQL)
                </p>
                <p class="mt-2">
                    Développement d’une plateforme de e-learning (Symfony 1.4)
                </p>
                <p class="mt-2">
                    <a
                        href="https://www.enaco.fr/"
                        target="_blank"
                        class="text-blue-500">ENACO</a
                    >
                </p>
            </div>
        </div>
        <div class="flex flex-col md:flex-row mb-6">
            <div class="w-full md:w-1/3 flex items-center justify-center">
                <Image
                    class="rounded-full w-48 h-48 object-contain object-center sm:mb-0 bg-white p-6"
                    src={Epsm}
                    alt="EPSM - Établissement Public de Santé Mentale"
                    width={128}
                    height={128}
                />
            </div>
            <div
                class="w-full md:w-2/3 text-left mt-2 text-blue-950 dark:text-gray-300"
            >
                <div class="flex flex-col w-full">
                    <h2 class="text-left text-xl uppercase">
                        EPSM des Flandres
                    </h2>
                    <div class="inline-flex items-center text-sm">
                        <SvgLocationPin />Bailleul
                    </div>
                </div>
                <h3 class="text-sm">Stage Développeur web</h3>
                <h4 class="text-sm mb-2">
                    Mars - Juillet 2007 | DEUST (Bac+2)
                </h4>
                <p class="mt-2">
                    Développement d’une plateforme de ticketing (PHP/Mysql)
                </p>

                <h2 class="text-xl uppercase mt-2">EPSM Lille Métropole</h2>
                <div class="inline-flex items-center justify-center text-sm">
                    <SvgLocationPin />Armentières
                </div>
                <h3 class="text-sm">Stage Technicien Mainteance et Réseau</h3>
                <h4 class="text-sm mb-2">Mars - Juillet 2005 | TEMIR 2005</h4>
                <p class="mt-2">
                    Maintenance, support, dépannage, serveurs et sécurité.
                </p>
            </div>
        </div>
    </div>
    <div class="flex flex-row md:hidden">
        <span class="h-[1px] w-20 bg-gray-300 rounded mt-8 mx-auto"></span>
    </div>
</section>
